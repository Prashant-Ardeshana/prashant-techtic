{% schema %}
{
   "name":"Moly Footer",
   "settings":[
      {
         "type":"header",
         "content":"Brands"
      },
      {
         "type":"checkbox",
         "id":"show_brands",
         "label":"Show Brands",
         "default":true
      },
      {
         "type":"header",
         "content":"Newsletter"
      },
      {
         "type":"checkbox",
         "id":"show_newsletter",
         "label":"Show NewsLetter",
         "default":true
      },
      {
         "type":"checkbox",
         "id":"show_only_homepage",
         "label":"Show NewsLetter Only Homepage",
         "default":true
      },
      {
         "type":"text",
         "id":"newsletter_heading",
         "label":"Newsletter Heading",
         "default":"Get Discount 30% Off !"
      },
      {
         "type":"header",
         "content":"Menus"
      },
      {
         "type":"text",
         "id":"menu1_title",
         "label":"Menu 1 Title",
         "default":"Information",
         "info":"if title is blank you don't show menu"
      },
      {
         "type":"link_list",
         "id":"menu1",
         "label":"Select Menu 1"
      },
      {
         "type":"text",
         "id":"menu2_title",
         "label":"Menu 2 Title",
         "default":"Customer Service",
         "info":"if title is blank you don't show menu"
      },
      {
         "type":"link_list",
         "id":"menu2",
         "label":"Select Menu 2"
      },
      {
         "type":"text",
         "id":"menu3_title",
         "label":"Menu 3 Title",
         "default":"My Account",
         "info":"if title is blank you don't show menu"
      },
      {
         "type":"link_list",
         "id":"menu3",
         "label":"Select Menu 3"
      },
      {
         "type":"text",
         "id":"menu4_title",
         "label":"Menu 4 Title",
         "default":"Extras",
         "info":"if title is blank you don't show menu"
      },
      {
         "type":"link_list",
         "id":"menu4",
         "label":"Select Menu 4"
      }
   ],
   "blocks":[
      {
         "type":"brand",
         "name":"Brand Slide",
         "settings":[
            {
               "type":"image_picker",
               "id":"brand_img",
               "label":"Brand logo image"
            }
         ]
      }
   ]
}

{% endschema %}

