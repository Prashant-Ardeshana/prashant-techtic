<header>
  <div class="header-area header-2 header-resposive-2 position-absolute pt-30 pl-65 pr-80">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-3 col-12 offset-xl-0 offset-lg-0 offset-md-5 offset-sm-4 ">
          <div class="logo text-center text-lg-left">
            <a href="{{ routes.root_url }}"><img src="{{ section.settings.logo | img_url: 'x33' }}" alt="{{ shop.name }}"></a>
          </div>
        </div>
        <div class="col-xl-8 col-lg-8 col-md-auto col-sm-auto">
          <div class="main-menu pt-5">
            <nav id="mobile-menu">
              {% assign new_menu = section.settings.menu %}
              <ul>
                {%- for link in new_menu.links -%}
                <li>
                  <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %}>
                    {{ link.title }}
                  </a>
                  {%- if link.links != blank -%}
                  <ul class="sub-menu">
                    {%- for child_link in link.links -%}
                    <li>
                      <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page"{% endif %}>
                        {{ child_link.title }}
                      </a>

                      {%- if child_link.links != blank -%}
                      <ul class="sub-menu">
                        {%- for grandchild_link in child_link.links -%}
                        <li><a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                          {{ grandchild_link.title }}
                          </a>
                        </li>
                        {%- endfor -%}
                      </ul>
                      {%- endif -%}

                    </li>
                    {%- endfor -%}
                  </ul>
                  {%- endif -%}
                </li>
                {%- endfor -%}
              </ul>
            </nav>
          </div>
