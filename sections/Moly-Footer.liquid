<div class="brand-area">
  <div class="container">
    <div class="brand-active">
      {% for block in section.blocks %}
      {% if section.settings.block == 'brand' %}
      <div class="single-brand">
        <div class="brand-img">
          <img src="{{ section.settings.brand_img }}" alt="brand-logo-{{ forloop.index }}">
        </div>
      </div>
      {% endif %}
      {% endfor %}
